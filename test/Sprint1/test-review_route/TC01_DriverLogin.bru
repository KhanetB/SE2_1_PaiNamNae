meta {
  name: TC01_DriverLogin
  type: http
  seq: 2
}

post {
  url: http://localhost:3000/api/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email":"{{driver_email}}",
    "password":"{{driver_password}}"
  }
}

script:pre-request {
  const driverToken = bru.getEnvVar("driver_token")
  if(driverToken){
    bru.runner.skipRequest();
  }
}

script:post-response {
  const body = res.getBody();
  bru.setEnvVar("driver_token",body.data.token)
  bru.setEnvVar("driver_id",body.data.user.id)
}

tests {
  test("get HTTP 200",function(){
    const status = res.getStatus()
    expect(status).to.equal(200)
  })
  
  test("get driver Token",function(){
    const body = res.getBody()
    expect(body.data).to.have.property("token")
    expect(body.data.user).to.have.property("id")
  })
}

settings {
  encodeUrl: true
  timeout: 0
}
