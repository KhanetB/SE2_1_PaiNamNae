meta {
  name: TC02_PassengerLogin
  type: http
  seq: 3
}

post {
  url: http://localhost:3000/api/auth/login
  body: json
  auth: inherit
}

body:json {
  {
    "email":"{{passenger_email}}",
    "password":"{{passenger_password}}"
  }
}

script:pre-request {
  const passengerToken = bru.getEnvVar("passenger_token")
  if(passengerToken){
    bru.runner.skipRequest();
  }
}

script:post-response {
  const body = res.getBody();
  bru.setEnvVar("passenger_token",body.data.token)
}

tests {
  test("get HTTP 200",function(){
    const status = res.getStatus()
    expect(status).to.equal(200)
  })
  
  test("get passenger Token",function(){
    const body = res.getBody()
    expect(body.data).to.have.property("token")
  })
}

settings {
  encodeUrl: true
  timeout: 0
}
